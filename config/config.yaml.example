camera:
  device: /dev/cam_aux  # 主摄像头设备
  device2: null  # 可选的第二路摄像头
  resolution:
  - 1920
  - 1080
  fps: 30
  jpeg_quality: 85
  
  # 摄像头重连配置（优先保证连接成功）
  auto_reconnect: true  # 启用自动重连
  reconnect_delay: 3.0  # 重连延迟时间(秒) - 给设备足够的恢复时间
  max_reconnect_attempts: 5  # 最大重连次数 - 多次重试确保连接成功（总时间约15秒）

gps:
  serial_port: /dev/ttyS4
  baudrate: 9600
  parity: N
  stopbits: 1
  timeout: 0.5
  slave_address: 1

upload:
  backend_url: http://121.37.178.162/api/blade-qdfl/qianjibianImgRecognition/save
  timeout: 10.0
  retry:
    max_attempts: 5
    base_delay: 2.0
    max_delay: 60.0
    exponential_base: 2.0
  offline_queue:
    enabled: true
    max_size: 1000
    persist_path: /var/lib/road-capture/queue.db

system:
  device_id: TERMINAL_001
  log_level: INFO
  log_path: /var/log/road-capture/app.log
  capture_interval: 5.0  # 采集间隔(秒) - 确保大于重连总时间
